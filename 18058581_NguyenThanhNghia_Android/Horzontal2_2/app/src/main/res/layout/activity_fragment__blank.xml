<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    tools:context=".Fragment_Blank">

    <TextView
        android:id="@+id/txtTitleChair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="128dp"
        android:layout_marginRight="128dp"
        android:paddingLeft="4sp"
        android:text="Nice Machine"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtMoneyChair"
        app:layout_constraintEnd_toStartOf="@+id/txtMoneyChair"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtMoneyChair"
        android:layout_width="62dp"
        android:layout_height="33dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="$250"
        android:textColor="@android:color/background_dark"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149" />

    <ImageView
        android:id="@+id/imageViewTru"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:src="@drawable/vector1"
        app:layout_constraintStart_toStartOf="@+id/txtTitleChair"
        app:layout_constraintTop_toTopOf="@+id/imageViewCong" />

    <ImageView
        android:id="@+id/imageViewCong"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/vector2"
        app:layout_constraintEnd_toEndOf="@+id/txtTitleChair"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleChair" />

    <TextView
        android:id="@+id/txtNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewCong"
        app:layout_constraintEnd_toStartOf="@+id/imageViewCong"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toEndOf="@+id/imageViewTru" />
</androidx.constraintlayout.widget.ConstraintLayout>